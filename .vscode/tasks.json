{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  //  pandoc manuscript.docx -t markdown -o manuscript.md --wrap=none --atx-headers
  "version": "2.0.0",
  "_runner": "terminal",
  "echoCommand": true,
  "tasks": [
    {
      "taskName": "build",
      "command": "rm html\\*.html; Get-ChildItem *.md -Recurse | ForEach-Object -Process { pandoc.exe $_.FullName -t html5 -o \"html\\$($_.BaseName).html\" };",
      "args": [],
      "isShellCommand": true,
      "isBuildCommand": true,
      "showOutput": "always"
    },
    {
      "taskName": "spell check all files",
      "command": "gci *.md -Recurse | foreach { write-output \"\nFile - $($_.FullName)\"; OddSpell $_; }",
      "isShellCommand": true,
      "showOutput": "always",
      "isTestCommand": true,
      "problemMatcher": {
        "owner": "OddSpell",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "File - (.+)",
            "file": 1
          },
          {
            "regexp": "(\\d+):(\\d+) (.+ ->.*)",
            "line": 1,
            "column": 2,
            "message": 3,
            "loop": true
          }
        ]
      }
    },
    {
      "taskName": "spell check this file",
      "command": "Write-Output \"File - ${file}\"; OddSpell \"${file}\";",
      "isShellCommand": true,
      "showOutput": "always",
      "problemMatcher": {
        "owner": "OddSpell",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "File - (.+)",
            "file": 1
          },
          {
            "regexp": "(\\d+):(\\d+) (.+ ->.*)",
            "line": 1,
            "column": 2,
            "message": 3,
            "loop": true
          }
        ]
      }
    },
    {
      "taskName": "count",
      "command": "Get-ChildItem *.md -Recurse | Get-Content | Measure-Object -Line -Word -Character",
      "isShellCommand": true,
      "showOutput": "always"
    }
  ]
}