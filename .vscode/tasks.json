{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  //  pandoc manuscript.docx -t markdown -o manuscript.md --wrap=none --atx-headers
  "version": "2.0.0",
  "tasks": [
    {
      "type": "gulp",
      "task": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "task": "spelling",
      "type": "gulp",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "OddSpell",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "(.+)",
            "file": 1
          },
          {
            "regexp": "(\\d+):(\\d+) (.+ ->.*)",
            "line": 1,
            "column": 2,
            "message": 3,
            "loop": true
          }
        ]
      }
    },
    {
      "taskName": "spell check this file",
      "type": "shell",
      "command": "Write-Output \"${file}\"; OddSpell \"${file}\";",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "OddSpell",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "(.+)",
            "file": 1
          },
          {
            "regexp": "(\\d+):(\\d+) (.+ ->.*)",
            "line": 1,
            "column": 2,
            "message": 3,
            "loop": true
          }
        ]
      }
    },
    {
      "taskName": "count all files",
      "type": "shell",
      "command": "Get-ChildItem *.md -Recurse | Get-Content | Measure-Object -Line -Word -Character",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "taskName": "count this file",
      "type": "shell",
      "command": "Get-ChildItem \"${file}\" | Get-Content | Measure-Object -Line -Word -Character",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}